.book-image > image {
    width: 350rpx;
}

.book-info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

    margin-top: 20rpx;
}

.share-btn {

    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-end;
    align-self: flex-end;
    border: none;
}

.share {
    font-size: 25rpx;
    border-radius: 42rpx;
    color: #478bf6;
    background-color: #f2f2f2;
}

.share::after {
    border: none;
}

.btn-image {
    width: 25rpx;
    height: 25rpx;
}

.book-name {
    color: #1e1e1e;
    font-size: 35rpx;
    margin-bottom: 8rpx;
}

.author {
    color: #8a8a8a;
	font-size: 30rpx;
	margin-bottom: 8rpx;
}

.publisher {
	color: #cdcdcd;
	font-size: 30rpx;
}

.donut-container {
	padding-top: 200rpx;
}


/* pages.wxss */

.swiper-container {
    box-sizing: border-box;
    padding: 120rpx 0 50rpx 0;

    display: flex;
    justify-content: center;
    align-items: center;
}

.swiper {
    width: 750rpx;
    height: 800rpx;
}

.swiper-item {
    /* 宽高自动设置为 100% */
    display: flex;
    justify-content: center;
    align-items: center;
}

.book-container {
    border: 1px solid #e6e6e6;
    width: 480rpx;
    height: 720rpx;

    padding: 30rpx 20rpx;

    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

    border-radius: 20rpx;
    box-shadow: 0 0 10rpx #dbdbdb;
}

.book-container-hover {
    transform: scale(0.96,0.96);
    transition: all 1 ease 0;
}

/* .book-image {
